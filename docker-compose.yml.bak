services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    volumes:
      - ./:/var/www/html:cached
    working_dir: /var/www/html
    environment:
      - COMPOSER_ALLOW_SUPERUSER=1
      - DB_CONNECTION=mysql
      - DB_HOST=db
      - DB_PORT=3306
      - DB_DATABASE=laravel
      - DB_USERNAME=laravel
      - DB_PASSWORD=secret
    depends_on:
      - db
    command: bash -lc "cp -f .env.docker .env && php -r 'while(true){$c=@mysqli_connect(getenv(\"DB_HOST\"),getenv(\"DB_USERNAME\"),getenv(\"DB_PASSWORD\"));if($c){mysqli_close($c);break;}sleep(1);}'; php artisan migrate --force || true; php-fpm"

  web:
    image: nginx:stable
    ports:
      - "8000:80"
    volumes:
      - ./:/var/www/html:ro
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    depends_on:
      - app

  db:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: laravel
      MYSQL_USER: laravel
      MYSQL_PASSWORD:   
    volumes:
      - dbdata:/var/lib/mysql

volumes:
  dbdata:


